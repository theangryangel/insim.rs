{
  "extends": ["config:recommended"],
  "cargo": {
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "matchDepTypes": ["workspace.dependencies"],
      "enabled": true,
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "description": "Only major updates for specific crates",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["workspace.dependencies"],
      "matchPackageNames": ["syn", "quote", "proc-macro2"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}
